{
    "include": ["./**/*", ],
    "exclude": ["../node_modules/*"],
    "compilerOptions": {
      "strict": true,
      "jsx": "react",
      "module": "ESNext",
      "target": "ES2020",
      "lib": ["ES2020", "DOM"],
      "moduleResolution": "node",
      "esModuleInterop": true,
      "skipLibCheck": true,
      "allowSyntheticDefaultImports": true,
      "types": [
        "node",
        "react",
        "react-dom"
      ]
    }
  }